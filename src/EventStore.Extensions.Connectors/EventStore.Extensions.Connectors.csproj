<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<RootNamespace>EventStore.Connectors</RootNamespace>
		<OutputType>library</OutputType>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<NoWarn>$(NoWarn);CS1591;CS1998;CS8618;CS8524;CS8655;RCS1194;NU1604;NU1602</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\EventStore.Common\EventStore.Common.csproj" ExcludeAssets="all" Private="false" />
		<ProjectReference Include="..\EventStore.Core\EventStore.Core.csproj" ExcludeAssets="all" Private="false" />
		<ProjectReference Include="..\EventStore.SystemRuntime\EventStore.SystemRuntime.csproj" ExcludeAssets="all" Private="false"/>
		<ProjectReference Include="..\EventStore.Extensions.Connectors.Contracts\EventStore.Extensions.Connectors.Contracts.csproj" />
	</ItemGroup>

	<!-- Required packages -->
	<ItemGroup>
		<PackageReference Include="Kurrent.Surge.Core" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Surge.DataProtection" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Toolkit" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.Elasticsearch" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.Http" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.Kafka" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.KurrentDB" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.MongoDB" Version="1.0.0-alpha.351" />
		<PackageReference Include="Kurrent.Connectors.RabbitMQ" Version="1.0.0-alpha.351" />
		<PackageReference Include="Eventuous.Application" Version="0.15.0" />
		<PackageReference Include="Eventuous.Extensions.AspNetCore" Version="0.15.0" />
		<PackageReference Include="Eventuous.Extensions.DependencyInjection" Version="0.15.0" />
		<PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.10.0" />
		<PackageReference Include="Grpc.StatusProto" Version="2.65.0" />
		<PackageReference Include="Microsoft.AspNetCore.Grpc.JsonTranscoding" Version="8.0.7" />

		<PackageReference Include="Serilog" Version="4.0.1" />
		<PackageReference Include="Serilog.Enrichers.Process" Version="3.0.0" />
		<PackageReference Include="Serilog.Enrichers.Thread" Version="4.0.0" />
		<PackageReference Include="Serilog.Expressions" Version="5.0.0" />
		<PackageReference Include="Serilog.Extensions.Logging" Version="8.0.0" />
		<PackageReference Include="Serilog.Settings.Configuration" Version="8.0.2" />
		<PackageReference Include="Serilog.Sinks.Async" Version="2.0.0" />
		<PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
		<PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />

		<PackageReference Include="Serilog.Formatting.Compact" Version="3.0.0" />
		<PackageReference Include="Serilog.Settings.Reloader" Version="2.10.0" />
		<PackageReference Include="Serilog.Sinks.Debug" Version="3.0.0" />
		<PackageReference Include="Serilog.Sinks.Seq" Version="8.0.0" />
		<PackageReference Include="Serilog.Enrichers.Environment" Version="3.0.1" />

	</ItemGroup>

	<!-- Exclude all packages/assets provided by ESDB that break on runtime or may cause issues -->
	<ItemGroup>
		<!-- Contains Plugin and License components -->
		<PackageReference Include="EventStore.Plugins" Version="25.2.6" ExcludeAssets="runtime" />
<!--		<PackageReference Include="Microsoft.Extensions.Options" PrivateAssets="all"/>-->
<!--		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" PrivateAssets="all"/>-->
<!--		<PackageReference Include="Microsoft.Extensions.Configuration.Json" PrivateAssets="all"/>-->
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection"/>
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Options" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Logging" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Configuration" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" PrivateAssets="all"/>
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" PrivateAssets="all"/>
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="EventStore.Plugins.Connectors" />
		<InternalsVisibleTo Include="EventStore.Extensions.Connectors.Tests" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="EventStore.Extensions.Connectors.csproj.DotSettings" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="JetBrains.Annotations" Version="2024.3.0" PrivateAssets="All" />
		<PackageReference Include="Roslynator.Analyzers" Version="4.12.9">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Roslynator.Formatting.Analyzers" Version="4.12.9">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<Using Include="JetBrains.Annotations" />
	</ItemGroup>
</Project>
