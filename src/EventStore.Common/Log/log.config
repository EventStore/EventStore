<?xml version="1.0" encoding="utf-8" ?>
<!-- Serilog Configuration -->
<configuration>
  <appSettings>
  <!-- Logging Levels: Verbose, Debug, Information, Warning, Error -->
    <add key="serilog:using:Console" value="Serilog.Sinks.Console" />
    <add key="serilog:minimum-level" value="Verbose" />
  <!--[PID:05349:025 2018.05.16 12:14:38.859 DEBUG ProjectionManagerRes] PROJECTIONS: Response received: 23294@$prepared
  PID:[1528:31 2018-05-23 10:17:57.630 Debug] PROJECTIONS: Scheduling the writing of $stopped to $projections-$master. Current status of Writer: Busy: True >
 -->
    <add key="serilog:using:Process" value="Serilog.Enrichers.Process" />
    <add key="serilog:enrich:WithProcessId"/>
    <add key="serilog:using:Thread" value="Serilog.Enrichers.Thread" />
    <add key="serilog:enrich:WithThreadId"/>
  <!-->
    <add key="serilog:enrich:with-property:Path" value="$EVENTSTORE_INT-COMPONENT-NAME" />
    <add key="serilog:using:Environment" value="Serilog.Enrichers.Environment" />
    -->    
    <add key="serilog:using:File" value="Serilog.Sinks.File" />
    <add key="serilog:write-to:File.path"  value="log.txt" />
    <add key="serilog:enrich:FromLogContext"/>
    <add key="serilog:write-to:Console.outputTemplate" value="{SourceContext:l} PID:[{ProcessId}:{ThreadId} {Timestamp:yyyy.MM.dd HH:mm:ss.fff} {Level:u}] {Message:lj} &gt;{NewLine}{Exception}" />
    <add key="serilog:write-to:File.outputTemplate" value="{SourceContext:l} PID:[{ProcessId}:{ThreadId} {Timestamp:yyyy.MM.dd HH:mm:ss.fff} {Level:u}] [&lt;s:{SourceContext}] {Message:lj} &gt;{NewLine}{Exception}" />

    </appSettings>

</configuration>