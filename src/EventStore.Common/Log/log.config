<?xml version="1.0" encoding="utf-8" ?>
<!-- Serilog Configuration -->
<configuration>
  <appSettings>
  <!-- Logging Levels: Verbose, Debug, Information, Warning, Error -->
    <add key="serilog:using:Console" value="Serilog.Sinks.Console" />
    <add key="serilog:write-to:Console" />
    <add key="serilog:using:File" value="Serilog.Sinks.File" />
    <add key="serilog:write-to:File.path"  value="%EVENTSTORE_INT-COMPONENT-NAME%\MyApp\log.txt" />
    <add key="serilog:write-to:File.path"  value="%EVENTSTORE_INT-COMPONENT-NAME%\MyApp\stats.csv" />
    </appSettings>
</configuration>