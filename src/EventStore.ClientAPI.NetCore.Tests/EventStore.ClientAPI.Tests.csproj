    <EventStoreClientAPITestsExclude Include="..\EventStore.Core.Tests\ClientAPI\Embedded\**\*.cs" />

    <Compile Include="..\EventStore.Core.Tests\ClientAPI\**\*.cs"
             Exclude="@(EventStoreClientAPITestsExclude)" />
  </ItemGroup>

  <ItemGroup>
