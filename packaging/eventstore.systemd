[Unit]
Description=Event Store Open Source

[Service]
User=eventstore
Group=eventstore
Type=simple
ExecStart=/bin/bash -c 'echo $$$ > /var/run/eventstore/eventstore.pid; exec /usr/bin/eventstored'
PIDFile=/var/run/eventstore/eventstore.pid
Restart=always
LimitNOFILE=32768
Environment=EVENTSTORE_DEV=True

[Install]
WantedBy=multi-user.target
